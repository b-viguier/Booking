{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Room Type</th>
            <th scope="col">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for type, price in types %}
            <tr>
                <form method="POST" action="{{ path('change_type_price') }}">
                    <td>{{ type }}<input type="hidden" required value="{{ type }}"/></td>
                    <td><input type="number" name="price" required value="{{ price }}"/></td>
                    <td>
                        <button type="submit">Changer le prix</button>
                    </td>
                </form>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock body %}
